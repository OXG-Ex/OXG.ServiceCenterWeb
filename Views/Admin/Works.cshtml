@model IEnumerable<OXG.ServiceCenterWeb.Models.Work>
@{
    ViewData["Title"] = "Works";
}

<h1>Услуги СЦ:</h1>

<div class="card border-primary mb-3">
    <div class="card-header">Все</div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Наименование</th>
                    <th scope="col">Стоимость</th>
                    <th scope="col">Кол-во по умолчанию</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Num</td>
                        <td>
                            <a class="btn btn-outline-info" asp-controller="Admin" asp-action="DeleteWork" asp-route-id="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Добавить услугу
        </button>
    </div>
</div>


<form>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Добавление услуги:</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="InputName">Наименование:</label>
                        <input class="form-control" placeholder="" name="NameWork" id="InputName">
                    </div>
                    <div class="form-group">
                        <label for="InputNum">Кол-во по умолчанию:</label>
                        <input class="form-control" type="number" placeholder="" name="NumWork" id="InputNum">
                    </div>
                    <div class="form-group">
                        <label for="InputPrice">Стоимость:</label>
                        <input class="form-control" type="number" placeholder="" name="PriceWork" id="InputPrice">
                    </div>
                </div>
                <div class="modal-footer">
                    <input asp-action="AddWork" type="submit" class="btn btn-primary" name="AddWorkBtn" value="Добавить" />
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</form>