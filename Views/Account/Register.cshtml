@model OXG.ServiceCenterWeb.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h2>Регистрация сотрудника</h2>


<div align="center">
    @using (Html.BeginForm("Register"))
    {
        <table>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Email)
                </td>
                <td>
                    @Html.EditorFor(m => m.Email)
                    <span asp-validation-for="Email" />
                </td>
            </tr>
            <tr>
                <td><br /></td>
                <td><br /></td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Password)
                </td>
                <td>
                    @Html.EditorFor(m => m.Password)
                    <span asp-validation-for="Password" />
                </td>
            </tr>
            <tr>
                <td><br /></td>
                <td><br /></td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.ConfirmPasswod)
                </td>
                <td>
                    @Html.EditorFor(m => m.ConfirmPasswod)
                    <span asp-validation-for="ConfirmPasswod" />
                </td>
            </tr>
        </table>
        <div asp-validation-summary="ModelOnly"></div>
        <br />
        <input type="submit" name="submit" value="Зарегистрироваться" />
    }
</div>